@page
@model PrivacyModel
@{
    ViewData["Title"] = "My Portfolio";
}

<link rel="stylesheet" href="~/css/site.css" />

<!-- HEADER -->
<header class="main-header">
    <div class="container d-flex justify-content-between align-items-center py-3">
        <h3 class="text-white mb-0">Portfolio</h3>
    </div>
</header>

<!-- HERO SECTION -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <!-- LEFT -->
            <div class="col-md-7 text-start">
                <h1 class="display-4 fw-bold mb-2">Ruby Angelo A. Piñez</h1>
                <p class="lead mb-3 quote-text"><em>"My magic is never giving up"</em></p>
                <p class="mb-4">
                    A 21-year-old aspiring software developer passionate about designing mobile apps
                    and creating efficient digital solutions.
                </p>
                <a href="#projects" class="btn btn-primary btn-lg me-2">View Projects</a>
                <a href="#contact" class="btn btn-outline-primary btn-lg">Contact Me</a>
                <a href="/files/RubyPiñez_Resume.pdf" class="btn btn-secondary btn-lg ms-2" target="_blank">Download Resume</a>
            </div>

            <!-- RIGHT -->
            <div class="col-md-5 text-center mt-4 mt-md-0">
                <img src="/images/ME.png"
                     alt="Profile Picture"
                     class="profile-img rounded-circle shadow-lg border border-3">
            </div>
        </div>
    </div>
</section>

<!-- ABOUT ME SECTION -->
<section id="about" class="py-5 bg-light">
    <div class="container">
        <h2 class="fw-bold mb-4 text-center">About Me</h2>
        <p class="text-center mb-4">
            I am a self-driven software developer with experience in C#, .NET MAUI, and web development.
            I enjoy turning ideas into functional applications and learning new technologies to improve my skills.
        </p>
        <div class="row text-center mt-4">
            <div class="col-md-4">
                <h5>Skills</h5>
                <p>C#, .NET, MAUI, HTML, CSS, JavaScript</p>
            </div>
            <div class="col-md-4">
                <h5>Education</h5>
                <p>BS Information Technology</p>
            </div>
            <div class="col-md-4">
                <h5>Hobbies</h5>
                <p>Coding challenges, gaming, photography</p>
            </div>
        </div>
    </div>
</section>

<!-- SKILLS SECTION -->
<section id="skills" class="py-5">
    <div class="container">
        <h2 class="fw-bold mb-4 text-center">My Skills</h2>
        <div class="row g-4 text-center">
            <div class="col-md-3">
                <p>C#</p>
                <div class="progress">
                    <div class="progress-bar bg-primary" style="width: 85%"></div>
                </div>
            </div>
            <div class="col-md-3">
                <p>.NET</p>
                <div class="progress">
                    <div class="progress-bar bg-primary" style="width: 80%"></div>
                </div>
            </div>
            <div class="col-md-3">
                <p>HTML/CSS</p>
                <div class="progress">
                    <div class="progress-bar bg-primary" style="width: 90%"></div>
                </div>
            </div>
            <div class="col-md-3">
                <p>JavaScript</p>
                <div class="progress">
                    <div class="progress-bar bg-primary" style="width: 75%"></div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- PROJECTS SECTION -->
<section id="projects" class="py-5 bg-light">
    <div class="container">
        <h2 class="fw-bold mb-4 text-center">My Projects</h2>
        <div class="row g-4">
            <!-- HANGMAN -->
            <div class="col-md-4">
                <div class="card shadow-sm h-100 project-card">
                    <img src="/images/hangman.png" class="card-img-top" alt="Hangman Project">
                    <div class="card-body">
                        <h5 class="card-title">Hangman</h5>
                        <p class="card-text">A classic word-guessing game built with C# and .NET.</p>
                        <a href="#" class="btn btn-primary btn-sm">View Details</a>
                    </div>
                </div>
            </div>
            <!-- FLASHCARD -->
            <div class="col-md-4">
                <div class="card shadow-sm h-100 project-card">
                    <img src="/images/flashcard.png" class="card-img-top" alt="Flashcard Project">
                    <div class="card-body">
                        <h5 class="card-title">Flashcard</h5>
                        <p class="card-text">A study app to memorize words and definitions efficiently.</p>
                        <a href="#" class="btn btn-primary btn-sm">View Details</a>
                    </div>
                </div>
            </div>
            <!-- CONVERTER -->
            <div class="col-md-4">
                <div class="card shadow-sm h-100 project-card">
                    <img src="/images/convert.png" class="card-img-top" alt="Converter Project">
                    <div class="card-body">
                        <h5 class="card-title">Converter</h5>
                        <p class="card-text">A converter for units like length, volume, and weight.</p>
                        <a href="#" class="btn btn-primary btn-sm">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- EXPERIENCE SECTION -->
<section id="experience" class="py-5">
    <div class="container">
        <h2 class="fw-bold mb-4 text-center">Experience & Achievements</h2>
        <ul class="experience-list text-center">
            <li>Completed internship at XYZ Software Solutions</li>
            <li>Developed 3 mobile apps using .NET MAUI</li>
            <li>Winner of Coding Challenge 2024</li>
        </ul>
    </div>
</section>

<!-- FOOTER / CONTACT -->
<footer id="contact" class="footer-contact">
    <div class="footer-container">
        <p class="footer-title">Contact Me</p>
        <div class="footer-links">
            <a href="mailto:ccs.rubyangelo@gmail.com">Email</a>
            <span>|</span>
            <a href="https://www.facebook.com/rubyangelo.apinez" target="_blank">Facebook</a>
            <span>|</span>
            <a href="https://www.instagram.com/rwillngl" target="_blank">Instagram</a>
        </div>

        <form class="contact-form mt-3" action="#" method="post">
            <input type="email" placeholder="Your email" required>
            <textarea placeholder="Message" required></textarea>
            <button type="submit" class="btn btn-primary btn-sm mt-2">Send</button>
        </form>

        <p class="footer-copy">© 2025 Ruby Angelo A. Piñez</p>
    </div>
</footer>
